# Car Parts Bulgaria Environment Variables
# Copy this file to .env.local and fill in your actual values

# Port Configuration
PORT=3001
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Firebase Configuration (Get from Firebase Console → Project Settings → General → Your apps → Web app)
NEXT_PUBLIC_FIREBASE_API_KEY=your_actual_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=car-parts-bulgaria.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=car-parts-bulgaria
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=car-parts-bulgaria.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=985408444839
NEXT_PUBLIC_FIREBASE_APP_ID=your_actual_app_id_here

# Database Configuration (Get from Supabase → Settings → Database → Connection string)
DATABASE_URL=your_supabase_database_url_here

# Default Language Settings
NEXT_PUBLIC_DEFAULT_LOCALE=bg
NEXT_PUBLIC_SUPPORTED_LOCALES=bg,en

# Currency Settings (Euro only)
NEXT_PUBLIC_CURRENCY=EUR
NEXT_PUBLIC_CURRENCY_SYMBOL=€

# Geographic Settings
NEXT_PUBLIC_COUNTRY=BG
NEXT_PUBLIC_TIMEZONE=Europe/Sofia

# Mobile.de Inspired Settings
NEXT_PUBLIC_ITEMS_PER_PAGE=20
NEXT_PUBLIC_MAX_IMAGES_PER_PRODUCT=10

# Development Settings
NODE_ENV=development
NODE_ENV=development